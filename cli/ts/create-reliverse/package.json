{
	"name": "reliverse",
	"version": "0.1.0",
	"description": "Bootstrap web templates in seconds.",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/blefnk/reliverse.git",
		"directory": "cli/ts/create-reliverse"
	},
	"keywords": [
		"reliverse",
		"create-reliverse",
		"relivator",
		"next.js",
		"reliverse-stack",
		"tailwind",
		"tRPC",
		"typescript"
	],
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.cts",
	"exports": {
		"require": {
			"types": "./dist/index.d.cts",
			"default": "./dist/index.cjs"
		},
		"import": {
			"types": "./dist/index.d.mts",
			"default": "./dist/index.mjs"
		}
	},
	"bin": { "reliverse": "./dist/index.js" },
	"files": [
		"dist",
		"template",
		"README.md",
		"LICENSE",
		"CHANGELOG.md",
		"package.json"
	],
	"scripts": {
		"knip": "knip",
		"build": "pkgroll",
		"typecheck": "tsc",
		"build:tsup": "tsup",
		"dev:w": "tsup --watch",
		"lint:disabled": "eslint",
		"lint:fix": "bun lint --fix",
		"release": "changeset version",
		"clean": "rm -rf dist .turbo node_modules",
		"start": "bun run build && tsx dist/index.js",
		"format": "prettier '**/*.{cjs,mjs,ts,tsx,md,json}' --ignore-path ../../.gitignore --ignore-unknown --no-error-on-unmatched-pattern --write",
		"format:check": "prettier '**/*.{cjs,mjs,ts,tsx,md,json}' --ignore-path ../../.gitignore --ignore-unknown --no-error-on-unmatched-pattern --check",
		"pub:beta": "bun run build && bunx jsr publish --tag beta && npm publish --tag beta",
		"pub:next": "bun run build && bunx jsr publish --tag next && npm publish --tag next",
		"npmpub:release": "bun run build && bunx jsr publish && npm publish",
		"pub:release": "bun run build && bunx jsr publish"
	},
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@antfu/eslint-config": "^2.13.3",
		"@clack/core": "^0.3.2",
		"@clack/prompts": "^0.6.3",
		"@eslint/eslintrc": "^3.0.2",
		"@ianvs/prettier-plugin-sort-imports": "^4.1.0",
		"@t3-oss/env-nextjs": "^0.9.2",
		"@tools/eslintconfig": "workspace:*",
		"@tools/tailwind": "workspace:*",
		"@tools/tsconfig": "workspace:*",
		"@total-typescript/ts-reset": "^0.5.1",
		"@types/eslint__eslintrc": "^2.1.1",
		"@types/eslint__js": "^8.42.3",
		"@types/fs-extra": "^11.0.4",
		"@types/gradient-string": "^1.1.5",
		"chalk": "^5.2.0",
		"commander": "^10.0.0",
		"eslint": "^9.0.0",
		"eslint-plugin-tailwindcss": "^3.15.1",
		"execa": "^7.1.1",
		"fs-extra": "^11.1.1",
		"gradient-string": "^2.0.2",
		"next-intl": "^3.11.3",
		"ora": "^6.3.1",
		"sort-package-json": "^2.4.1"
	},
	"devDependencies": {
		"@auth/drizzle-adapter": "^0.7.0",
		"@auth/prisma-adapter": "^1.4.0",
		"@planetscale/database": "^1.16.0",
		"@prisma/adapter-planetscale": "^5.10.2",
		"@prisma/client": "^5.10.2",
		"@swc/cli": "^0.3.12",
		"@swc/core": "^1.4.13",
		"@tanstack/react-query": "^5.25.0",
		"@trpc/client": "^next",
		"@trpc/next": "^next",
		"@trpc/react-query": "^next",
		"@trpc/server": "^next",
		"@types/better-sqlite3": "^7.6.9",
		"@types/node": "^20.12.7",
		"better-sqlite3": "^9.4.3",
		"drizzle-kit": "^0.20.14",
		"drizzle-orm": "^0.29.4",
		"mysql2": "^3.9.1",
		"next": "^14.2.0",
		"next-auth": "^4.24.6",
		"pkgroll": "^2.0.2",
		"postgres": "^3.4.3",
		"prettier": "^3.2.5",
		"prettier-plugin-tailwindcss": "^0.5.11",
		"prisma": "^5.10.2",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"superjson": "^2.2.1",
		"tailwindcss": "^3.4.3",
		"ts-node": "^10.9.2",
		"tsup": "^8.0.2",
		"tsx": "^4.7.2",
		"type-fest": "^3.7.0",
		"typescript": "^5.4.5",
		"zod": "^3.22.4"
	}
}
