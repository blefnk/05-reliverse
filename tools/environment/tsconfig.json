{
	"extends": "@tools/tsconfig/internal.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"]
		},
		"outDir": "dist",
		"declaration": true,
		"declarationMap": true,
		"noEmit": true,
		"skipLibCheck": false,
		"emitDeclarationOnly": false
	},
	"include": ["__tests__", "src", "rollup.config.mts"],
	"exclude": ["node_modules", "dist"]
}
