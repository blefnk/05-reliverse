{
	"editor.codeActionsOnSave": {
		"quickfix.biome": "explicit",
		"source.fixAll.eslint": "explicit",
		"source.organizeImports.biome": "explicit"
	},
	"editor.defaultFormatter": "biomejs.biome",
	"editor.formatOnSave": true,
	"editor.tabSize": 2,
	"npm.packageManager": "pnpm",
	"typescript.enablePromptUseWorkspaceTsdk": true,
	"typescript.preferences.includePackageJsonAutoImports": "on",
	"typescript.tsdk": "node_modules/typescript/lib",
	"[json]": { "editor.defaultFormatter": "biomejs.biome" },
	"[markdown]": { "editor.defaultFormatter": "DavidAnson.vscode-markdownlint" },
	"markdownlint.config": {
		"MD033": { "allowed_elements": ["img", "p", "a", "details", "summary"] }
	},
	"eslint.rules.customizations": [{ "rule": "*", "severity": "warn" }],
	"eslint.experimental.useFlatConfig": true,
	// "eslint.workingDirectories": [
	// 	{ "pattern": "apps/*/" },
	// 	{ "pattern": "cli/*/" },
	// 	{ "pattern": "packages/*/" },
	// 	{ "pattern": "scripts/*/" },
	// 	{ "pattern": "tools/*/" }
	// ],
	"eslint.workingDirectories": [{ "mode": "auto" }],
	"tailwindCSS.experimental.configFile": "./tools/tailwind/web.ts",
	"tailwindCSS.experimental.classRegex": [
		["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
		["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
	],
	"typescript.preferences.autoImportFileExcludePatterns": [
		"next/router.d.ts",
		"next/dist/client/router.d.ts"
	],
	"[css]": { "editor.defaultFormatter": "vscode.css-language-features" },
	"css.lint.unknownAtRules": "ignore",
	"editor.formatOnSaveMode": "file",
	"i18n-ally.localesPaths": ["src/data/locales"],
	"i18n-ally.keystyle": "nested",
	"files.associations": { "*.hbs": "handlebars" },
	"[handlebars]": { "editor.defaultFormatter": null },
	"cSpell.words": [
		"appts",
		"Authed",
		"automerge",
		"autoprefixer",
		"blefnk",
		"Blefonix",
		"bleverse",
		"callout",
		"CLIENTVAR",
		"clsx",
		"deepmerge",
		"envinfo",
		"fontawesome",
		"fortawesome",
		"gsap",
		"ianvs",
		"instanceof",
		"Kbwps",
		"Korniienko",
		"kysely",
		"lucide",
		"manypkg",
		"Nazarii",
		"nbsp",
		"NEXTAUTH",
		"nextjs",
		"Nomaders",
		"noopener",
		"noreferrer",
		"Peresfer",
		"planetscale",
		"postcss",
		"prettiercache",
		"relivator",
		"reliverse",
		"shadcn",
		"signin",
		"signout",
		"solito",
		"subrouters",
		"superapp",
		"superjson",
		"tailwindcss",
		"tanstack",
		"tauri",
		"tauris",
		"todos",
		"topo",
		"trpc",
		"tsbuildinfo",
		"turborepo",
		"typecheck",
		"typeof",
		"unauthed",
		"Vercel",
		"Wordmark"
	]
}
