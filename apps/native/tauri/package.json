{
  "name": "@acme/tauri",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "pnpm with-env next build",
    "clean": "git clean -xdf .next .turbo node_modules",
    "dev": "pnpm with-env next dev --port 3002",
    "lint": "dotenv -v SKIP_ENV_VALIDATION=1 next lint",
    "format": "prettier --check \"**/*.{js,cjs,mjs,ts,tsx,md,json}\"",
    "latest": "pnpm latest:canary",
    "latest:stable": "pnpm add react@latest react-dom@latest next@latest",
    "latest:canary": "pnpm add react@canary react-dom@canary next@canary",
    "start": "pnpm with-env next start",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../../.env --"
  },
  "dependencies": {
    "@acme/api": "^0.0.0",
    "@acme/auth": "^0.0.0",
    "@acme/db": "^0.0.0",
    "@t3-oss/env-nextjs": "^0.9.2",
    "next": "14.1.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "superjson": "2.2.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@acme/eslint-config": "^0.0.0",
    "@acme/prettier-config": "^0.0.0",
    "@acme/tailwind-config": "^0.0.0",
    "@acme/tsconfig": "^0.0.0",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@acme/eslint-config/base",
      "@acme/eslint-config/nextjs",
      "@acme/eslint-config/react"
    ]
  },
  "prettier": "@acme/prettier-config"
}