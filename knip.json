{
	"$schema": "https://unpkg.com/knip@5/schema.json",
	"ignore": [
		"apps/next/src/env.ts",
		"tools/eslintconfig/base.js",
		"packages/ui/turbo/generators/config.ts",
		"tools/environment/rollup.config.mts",
		"tools/environment/rollup.gendts.js",
		"tools/environment/rollup.postbuild.mjs",
		"apps/next/tailwind.config.ts",
		"tools/tailwind/eslint.config.js",
		"cli/ts/**/*.{ts,tsx,js,cjs}",
		"scripts/generators/config.ts",
		"tools/valibot/mod.ts",
		"tools/valibot/src/validations/integer/index.ts",
		"cli/ts/create-reliverse/template/extras/supabase/seed.mts"
	],
	"ignoreDependencies": [
		"@biomejs/biome",
		"@total-typescript/ts-reset",
		"rollup-plugin-dts",
		"esbuild",
		"next",
		"sherif",
		"@tools/tailwind",
		"@changesets/changelog-github",
		"@antfu/eslint-config",
		"@turbo/gen",
		"cspell",
		"tsup"
	],
	"ignoreBinaries": [
		"up",
		"start",
		"with-env",
		"format",
		"tsc",
		"typecheck",
		"build",
		"eslint",
		"lint",
		"pub:beta",
		"pub:release",
		"push",
		"studio"
	],
	"workspaces": {
		".": {
			"ignoreDependencies": [
				"@tools/tsconfig",
				"@testing-library/react",
				"rollup-plugin-esbuild",
				"tsup",
				"rollup"
			],
			"ignoreBinaries": ["latest", "prebuild"]
		},
		"apps/next": {
			"ignoreDependencies": [
				"@testing-library/react",
				"@tools/environment",
				"valibot",
				"tailwindcss",
				"@eslint/eslintrc",
				"@vitejs/plugin-react",
				"@types/eslint__eslintrc",
				"eslint-plugin-perfectionist"
			]
		},
		"cli/ts/create-reliverse": {
			"ignoreDependencies": [
				"@swc/cli",
				"ts-node",
				"next-intl",
				"@clack/core",
				"@ianvs/prettier-plugin-sort-imports",
				"@auth/drizzle-adapter",
				"@auth/prisma-adapter",
				"@planetscale/database",
				"@prisma/adapter-planetscale",
				"@prisma/client",
				"@tanstack/react-query",
				"@trpc/client",
				"@trpc/next",
				"@trpc/react-query",
				"@trpc/server",
				"@types/better-sqlite3",
				"better-sqlite3",
				"drizzle-kit",
				"@t3-oss/env-nextjs",
				"drizzle-orm",
				"mysql2",
				"next-auth",
				"postgres",
				"prettier-plugin-tailwindcss",
				"prisma",
				"superjson",
				"tailwindcss",
				"@eslint/eslintrc",
				"@types/eslint__eslintrc",
				"@types/eslint__js",
				"eslint-plugin-tailwindcss",
				"@tools/eslintconfig",
				"zod"
			]
		},
		"scripts/generators": {
			"ignoreDependencies": ["@tools/javascript", "@tools/tsconfig"]
		},
		"scripts/validators": {
			"ignoreDependencies": ["@tools/javascript", "@tools/tsconfig"]
		},
		"packages/ui": {
			"ignoreDependencies": [
				"@types/react-dom",
				"tailwindcss-animate",
				"typescript-eslint"
			]
		},
		"tools/environment": {
			"ignoreDependencies": [
				"@tools/javascript",
				"@rollup/plugin-commonjs",
				"@rollup/plugin-node-resolve",
				"@rollup/plugin-typescript",
				"ts-node",
				"tsx"
			],
			"ignoreBinaries": ["rimraf", "terser"]
		},
		"tools/tailwind": {
			"ignoreDependencies": ["postcss"]
		},
		"tools/eslintconfig": {
			"ignoreDependencies": [
				"eslint",
				"eslint-config-turbo",
				"eslint-plugin-jsx-a11y",
				"@stylistic/eslint-plugin"
			]
		}
	}
}
