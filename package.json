{
  "name": "@blefnk/reliverse",
  "scripts": {
    "build:cli": "cd apps/cli && bun build-pub.ts --bundler-bun --build-only",
    "build:prompts": "cd packages/prompts && bun build-pub.ts --bundler-bun --build-only",
    "pub:cli": "cd apps/cli && bun build-pub.ts --bundler-bun",
    "pub:prompts": "cd packages/prompts && bun build-pub.ts --bundler-bun",
    "add:cli": "cd apps/cli && bun add",
    "add:prompts": "cd packages/prompts && bun add",
    "rm:cli": "cd apps/cli && bun rm",
    "rm:prompts": "cd packages/prompts && bun rm",
    "dev:cli": "bun apps/cli/src/main.ts"
  },
  "workspaces": ["apps/*", "packages/*"],
  "sideEffects": false
}
