{
  "name": "reliverse",
  "version": "0.3.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "clean:workspaces": "turbo clean",
    "clean": "git clean -xdf node_modules",
    "db:push": "pnpm -F db push",
    "db:studio": "pnpm -F db studio",
    "dev": "turbo dev --parallel",
    "dev:edge": "pnpm --filter @acme/nextjs-edge dev",
    "dev:node": "pnpm --filter @acme/nextjs-node dev",
    "dev:expo": "pnpm --filter @acme/expo dev",
    "dev:tauris": "pnpm --filter tauris dev",
    "latest:everywhere": "pnpm update --latest --recursive && cd apps/nextjs/edge && pnpm latest && cd ../node && pnpm latest && cd ../../..",
    "format:fix": "turbo format --continue -- --write --cache --cache-location=\"node_modules/.cache/.prettiercache\"",
    "format": "turbo format --continue -- --cache --cache-location=\"node_modules/.cache/.prettiercache\"",
    "lint:fix": "turbo lint --continue -- --fix --cache --cache-location \"node_modules/.cache/.eslintcache\" && manypkg fix",
    "lint": "turbo lint --continue -- --cache --cache-location \"node_modules/.cache/.eslintcache\" && manypkg check",
    "tdc": "turbo daemon clean",
    "tdl": "pnpm dlx turbo link",
    "typecheck": "turbo typecheck"
  },
  "dependencies": {
    "@acme/prettier-config": "^0.0.0",
    "@manypkg/cli": "^0.21.2",
    "@turbo/gen": "^1.12.4",
    "prettier": "^3.2.5",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3"
  },
  "prettier": "@acme/prettier-config",
  "pnpm": {
    "overrides": {
      "next": "14.1.0",
      "@contentlayer/core>esbuild": "0.19.12",
      "@opentelemetry/core>@opentelemetry/api": "1.8.0",
      "@opentelemetry/otlp-transformer>@opentelemetry/api": "1.8.0",
      "@opentelemetry/sdk-trace-base>@opentelemetry/api": "1.8.0",
      "@opentelemetry/sdk-metrics>@opentelemetry/api": "1.8.0",
      "@opentelemetry/sdk-logs>@opentelemetry/api": "1.8.0",
      "@opentelemetry/resources>@opentelemetry/api": "1.8.0",
      "eslint-plugin-redundant-undefined>@typescript-eslint/parser": "7.1.0"
    },
    "allowedDeprecatedVersions": {
      "coffee-script": "*",
      "domexception": "*",
      "gulp-header": "*",
      "abab": "*"
    }
  },
  "manypkg": {
    "ignoredRules": [
      "EXTERNAL_MISMATCH",
      "INTERNAL_MISMATCH",
      "ROOT_HAS_DEV_DEPENDENCIES",
      "INCORRECT_REPOSITORY_FIELD"
    ]
  },
  "packageManager": "pnpm@8.15.4",
  "volta": {
    "node": "20.11.1",
    "pnpm": "8.15.4"
  }
}