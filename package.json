{
	"name": "@reliverse/root",
	"version": "0.3.0",
	"author": "Nazarii Korniienko <blefnk@gmail.com> (https://github.com/blefnk)",
	"repository": {
		"type": "git",
		"url": "https://github.com/blefnk/reliverse.git"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.6.4",
		"@changesets/changelog-github": "^0.5.0",
		"@changesets/cli": "^2.26.1",
		"@manypkg/cli": "^0.21.3",
		"@testing-library/react": "^15.0.0",
		"@tools/tsconfig": "workspace:*",
		"@turbo/gen": "^1.13.2",
		"cspell": "^8.7.0",
		"esbuild": "^0.20.2",
		"knip": "^5.9.4",
		"rollup": "^4.14.1",
		"rollup-plugin-dts": "^6.1.0",
		"rollup-plugin-esbuild": "^6.1.1",
		"sherif": "^0.8.4",
		"turbo": "^1.13.2"
	},
	"description": "Bootstrap web templates and deploy web apps in seconds",
	"keywords": [
		"reliverse",
		"create-reliverse",
		"relivator",
		"next.js",
		"reliverse-stack",
		"tailwind",
		"tRPC",
		"typescript"
	],
	"license": "MIT",
	"manypkg": {
		"ignoredRules": [
			"EXTERNAL_MISMATCH",
			"INTERNAL_MISMATCH",
			"ROOT_HAS_DEV_DEPENDENCIES",
			"INCORRECT_REPOSITORY_FIELD"
		]
	},
	"packageManager": "bun@1.1.2",
	"private": true,
	"scripts": {
		"appts": "bun prebuild && bun knip && bun lint && bun format && bun typecheck && bun typestat && bun run test && bun turbo build",
		"build:cli": "turbo --filter=reliverse build",
		"build": "turbo build",
		"bun:dev": "bun run --filter @apps/next dev",
		"check": "bunx sherif@latest",
		"clean": "turbo clean && rm -rf node_modules bun.lockb",
		"db:push": "pnpm -F db push",
		"db:studio": "pnpm -F db studio",
		"dev:cli": "cd cli/ts/create-reliverse && bun run dev && cd ../..",
		"dev:nextjs": "pnpm --filter @apps/next dev",
		"dev:parallel": "turbo dev --parallel",
		"dev:tauris": "pnpm --filter tauris dev",
		"dev": "turbo dev",
		"format:fix": "turbo format --continue -- --write --cache --cache-location=\"node_modules/.cache/.prettiercache\"",
		"format:prettier": "turbo format --continue -- --cache --cache-location=\"node_modules/.cache/.prettiercache\"",
		"format": "bunx @biomejs/biome check --apply apps/**/app packages/**/src",
		"knip": "knip",
		"latest:everywhere": "pnpm update --latest --recursive",
		"latest": "turbo latest",
		"lint:fix": "turbo lint --continue -- --fix --cache --cache-location \"node_modules/.cache/.eslintcache\" && manypkg fix",
		"lint:manypkg": "turbo lint --continue -- --cache --cache-location \"node_modules/.cache/.eslintcache\" && manypkg check",
		"lint": "turbo lint",
		"prebuild": "turbo build --filter=@tools/environment",
		"pub:beta": "cd cli/ts/create-reliverse && bun pub:beta",
		"pub:release": "cd cli/ts/create-reliverse && bun pub:release",
		"release": "changeset version",
		"start:cli": "cd cli/ts/create-reliverse && bun start && cd ../..",
		"tdc": "turbo daemon clean",
		"tdl": "pnpm dlx turbo link",
		"test:bun": "bun test",
		"test:watch": "turbo run test:watch",
		"test": "turbo run test",
		"typecheck": "turbo typecheck",
		"typestat": "bunx typestat --config typestat.json",
		"up": "bun update",
		"upf": "bun up -f",
		"dev:expo": "pnpm --filter @repo/expo dev",
		"dev:tauri": "pnpm --filter @repo/tauri dev"
	},
	"type": "module",
	"workspaces": ["apps/*", "cli/ts/*", "packages/*", "scripts/*", "tools/*"]
}
