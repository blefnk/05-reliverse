{
	"name": "@blefnk/reliverse",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"dev:cli": "tsx watch ./packages/cli/src/index.ts",
		"dev:docs": "turbo dev --filter=docs",
		"dev:web": "turbo dev --filter=web",
		"lint": "turbo lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"add:cli": "pnpm install --recursive --filter=reliverse",
		"add-dev:cli": "pnpm install --save-dev --recursive --filter=reliverse",
		"add:docs": "pnpm install --recursive --filter=docs",
		"add-dev:docs": "pnpm install --save-dev --recursive --filter=docs",
		"add:web": "pnpm install --recursive --filter=web",
		"add-dev:web": "pnpm install --save-dev --recursive --filter=web",
		"knip": "knip"
	},
	"devDependencies": {
		"@types/node": "^22.8.4",
		"knip": "^5.34.3",
		"prettier": "^3.2.5",
		"tsx": "^4.19.2",
		"turbo": "^2.2.3",
		"typescript": "5.5.4"
	},
	"engines": {
		"node": ">=20"
	},
	"packageManager": "pnpm@9.12.2+sha512.22721b3a11f81661ae1ec68ce1a7b879425a1ca5b991c975b074ac220b187ce56c708fe5db69f4c962c989452eee76c82877f4ee80f474cebd61ee13461b6228"
}
