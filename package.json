{
  "name": "reliverse",
  "author": "blefnk",
  "version": "0.3.0",
  "type": "module",
  "description": "At its current stage, Reliverse CLI is a powerful website builder right in your terminal. You can start from scratch or with a template, setting everything up automatically or customizing it to your exact preferences. With all the tools pre-configured and ready to go, you can build exactly what you envision.",
  "scripts": {
    "appts": "redrun knip lint format typecheck test build",
    "build": "fse remove --quiet dist && tsup",
    "ci": "pnpm lint:eslint && pnpm typecheck && pnpm test && pnpm build",
    "dev:eslint": "pnpm eslint --inspect-config",
    "dev": "tsx src/index.ts",
    "dev:node": "node dist/index.js",
    "format:biome": "biome format --write .",
    "format": "redrun format:biome",
    "knip": "knip",
    "latest": "pnpm update --latest",
    "lint:biome": "biome lint --write .",
    "lint:eslint": "eslint --cache --fix .",
    "lint": "redrun lint:eslint lint:biome",
    "pub": "pnpm publish --access public",
    "test": "vitest run",
    "test:dev": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "files": ["dist"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "keywords": ["reliverse", "cli"],
  "license": "MIT",
  "dependencies": {
    "consola": "^3.2.3",
    "giget": "^1.2.3",
    "nypm": "^0.3.11",
    "pathe": "^1.1.2",
    "random-words": "^2.0.1",
    "simple-git": "^3.26.0"
  },
  "devDependencies": {
    "@atao60/fse-cli": "^0.1.9",
    "@biomejs/biome": "^1.9.0",
    "@eslint/js": "^9.10.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.5.4",
    "eslint": "^9.10.0",
    "knip": "^5.30.1",
    "redrun": "^11.0.5",
    "terser": "^5.32.0",
    "tsup": "^8.2.4",
    "tsx": "^4.19.1",
    "typescript": "5.6.2",
    "typescript-eslint": "^8.5.0",
    "vitest": "^2.1.0"
  },
  "pnpm": {
    "allowedDeprecatedVersions": {
      "inflight": "*",
      "glob": "*"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "eslint": "9"
      }
    }
  },
  "packageManager": "pnpm@9.7.1+sha512.faf344af2d6ca65c4c5c8c2224ea77a81a5e8859cbc4e06b1511ddce2f0151512431dd19e6aff31f2c6a8f5f2aced9bd2273e1fed7dd4de1868984059d2c4247"
}
